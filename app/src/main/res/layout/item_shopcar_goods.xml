<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="12dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingLeft="12dp">

        <ImageView
            android:id="@+id/checkbox"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/selector_checkbox"
            tools:layout_height="wrap_content"
            tools:layout_width="wrap_content" />

        <RelativeLayout
            android:id="@+id/img_rl"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/checkbox">

            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/goods_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@color/transparent"
                app:riv_border_color="@color/white"
                app:riv_border_width="0dip"
                app:riv_corner_radius="5dip"
                app:riv_mutate_background="true"
                app:riv_oval="false" />







            <ImageView
                android:id="@+id/iv_shoppingaole_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@color/color_60EDEDED"
                android:visibility="invisible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_rl"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp">



                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="特仑苏2箱99元6月特仑苏250…"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    />

            </RelativeLayout>

            <TextView
                android:layout_marginLeft="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="规格：XXXX"
                android:textColor="#ff999999"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ "
                        android:textColor="#fff05557"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19.9"
                        android:textColor="#fff05557"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_marginRight="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color_F2F2F2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/goodsRule_minusRelative"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/color_F2F2F2"
                            android:padding="6dp">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@mipmap/shopping_cart_minus" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/goodsRule_numTv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/color_666666"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:id="@+id/goodsRule_addRelative"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/color_F8F8F8"
                            android:padding="6dp">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@mipmap/shopping_cart_add" />
                        </RelativeLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_gravity="center"
                        android:paddingLeft="12dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/shop_car_delete"

                        />


                </LinearLayout>





            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/color_F0F1F5"
        />

</LinearLayout>