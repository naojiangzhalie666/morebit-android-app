<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fpi="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ad_root_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:clickable="true"
    >
    <RelativeLayout
        android:id="@+id/dailog_vip_grade_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_upgrade_bg"
            android:layout_width="340dp"
            android:layout_height="370dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/bg_leader_upgrade"
            android:scaleType="fitCenter"/>
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_alignLeft="@id/img_upgrade_bg"
            android:layout_alignBottom="@id/img_upgrade_bg"
            android:layout_marginBottom="60dp"
            >

                <LinearLayout
                    android:id="@+id/update_leader_grade"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="70dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/grade_update_bg"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="立即升级"
                        android:textStyle="bold"
                        android:textColor="@color/color_885A3D"
                        android:textSize="15dp"/>

                </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>



    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/dailog_vip_grade_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:padding="10dp"
        android:src="@mipmap/update_grade_close" />
</RelativeLayout>