<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp">

        <ImageView
            android:id="@+id/checkbox"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:src="@drawable/selector_checkbox"
            tools:layout_height="wrap_content"
            tools:layout_width="wrap_content" />

        <RelativeLayout
            android:id="@+id/img_rl"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/checkbox">

            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/goods_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@color/transparent"
                app:riv_border_color="@color/white"
                app:riv_border_width="0dip"
                app:riv_corner_radius="5dip"
                app:riv_mutate_background="true"
                app:riv_oval="false" />


            <ImageView
                android:id="@+id/video_play"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bofang"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/select_tag"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/icon_official_gouxuan_huise"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/xh_tag"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/diyiming"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_shoppingaole_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@color/color_60EDEDED"
                android:visibility="invisible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_rl"
            android:orientation="vertical">

            <include
                layout="@layout/item_goods_line_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:paddingRight="10dp" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="6dp"
                android:background="@color/color_F5F5F5"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
