<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_FFFFFF"
    >
    <ImageView
        android:id="@+id/number_goods_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_default"
        android:layout_margin="10dp"
        android:scaleType="centerInside"
        />
    <TextView
        android:id="@+id/number_goods_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_333333"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"

        android:layout_below="@id/number_goods_pic"
        android:layout_alignLeft="@id/number_goods_pic"
        android:text="商品简介商品简介商品简介"
        android:maxLines="2"
        android:lines="2"
        android:maxLength="40"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/number_goods_desc"
        >
        <TextView
            android:id="@+id/number_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_goods_price"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/img_morebit_corn"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:text="@string/number_give_more_corn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/more_corn_icon"
            android:scaleType="fitCenter"
            />
        <TextView
            android:id="@+id/txt_morebit_corn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_give_more_corn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:paddingRight="15dp"
            android:paddingLeft="5dp"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_ffea993e"
            android:background="@drawable/bg_red_morecoin"
            />

    </RelativeLayout>




</RelativeLayout>