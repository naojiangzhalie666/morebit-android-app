<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <com.zjzy.morebit.Module.common.View.ReUseListView
                android:id="@+id/listview_aole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        <LinearLayout
            android:id="@+id/dateNullView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="45dp"
            android:visibility="gone">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_icon_null"
                android:src="@drawable/image_no_teams" />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="还没有粉丝呢，快邀请好友使用多点优选吧！\n 好友下单，你也有机会获取佣金哦"
           android:gravity="center_horizontal"
           android:id="@+id/tv_hint"
           android:layout_marginTop="29dp"
           android:textColor="@color/color_666666"/>
            <TextView
                android:id="@+id/btn_invite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_yellow_ffd800_round_30dp"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="立即邀请"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>