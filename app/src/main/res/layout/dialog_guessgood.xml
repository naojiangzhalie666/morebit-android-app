<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


<RelativeLayout
    android:layout_width="260dp"
    android:layout_marginTop="6dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_editoneline_dialog_whilebg_10dp"
    android:orientation="vertical"
    android:paddingBottom="19dp">




    <RelativeLayout
        android:id="@+id/shopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="3dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            android:layout_marginTop="3dp"
            >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@drawable/icon_default"
            android:scaleType="fitXY"/>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/cardview"
            android:layout_marginLeft="8dp">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_333333"
                android:textSize="12dp"
                android:maxLines="2"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/coupon"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:background="@drawable/background_f05557_radius_2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:layout_marginTop="5dp"
                tools:text="10元券"
                />
            <TextView
                android:id="@+id/commission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_border_fa6400_2"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textColor="@color/color_FA6400"
                android:textSize="10dp"
                tools:text="预估收益0.25元"
                android:layout_marginTop="5dp"
                />

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp">
                   <TextView
                       android:layout_width="8dp"
                       android:layout_height="17dp"
                       android:text="¥ "
                       android:layout_marginRight="3dp"
                       android:textColor="@color/color_F05557"
                       android:textSize="12sp"
                       android:textStyle="bold"
                       />
                   <TextView
                       android:id="@+id/discount_price"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="29.9"
                       android:textStyle="bold"
                       android:textColor="@color/color_F05557"
                       android:textSize="18dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="  抢购"
                       android:textColor="@color/color_F05557"
                       android:textSize="12dp"/>
               </LinearLayout>
        </LinearLayout>
    </RelativeLayout>





    <LinearLayout
        android:layout_below="@+id/shopLayout"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="23dp">

        <TextView
            android:id="@+id/commissionTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_border_fa6400_18"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="分享"
            android:textSize="14sp"
            android:textColor="@color/color_FA6400"
            android:layout_marginRight="6dp"/>

        <TextView
            android:id="@+id/buyTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_guessdialog_shouyi"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="购买"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginLeft="6dp"/>

    </LinearLayout>

</RelativeLayout>

    <LinearLayout
        android:id="@+id/closeLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_dialog_close"
            android:layout_gravity="center"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/guess_like_bg"
        android:layout_centerHorizontal="true"
        android:text="猜你想买"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        />

</RelativeLayout>