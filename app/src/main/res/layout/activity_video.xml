<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_000000">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/closs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/retrun_white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r1">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/background_radius_white_7dp">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="90dp"
            android:layout_height="96dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@id/iv_head"
            android:src="@mipmap/tao_icon" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            tools:text="商品标题标题标题标题" />
        <!--券额-->
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/iv_head"
            android:background="@mipmap/coupon_bg"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            tools:text="20元券"
            android:textColor="#ffdb493e"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_subsidy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/tv_price"
            android:background="@drawable/bg_earning_header_2dp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            tools:text="估计收益31.57元"
            android:textColor="#ffffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_price"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/iv_head"
            tools:text="销量：23456"
            android:textColor="#ff999999"
            android:textSize="10sp" />
        <!--券后价-->
        <TextView
            android:id="@+id/qian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_head"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_head"
            android:text="¥"
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_coupon_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_head"
            android:layout_toRightOf="@id/qian"
            tools:text="299.0"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_head"
            android:layout_toLeftOf="@+id/tv_share"
            android:background="@drawable/bg_color_fc6047_right_16"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:text="分享赚钱" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_head"
            android:background="@drawable/bg_color_f333333_left_16"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:layout_alignParentRight="true"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:layout_marginRight="@dimen/dp_10"
            android:text="立即购买" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/img_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/short_video_play_icon"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

</RelativeLayout>