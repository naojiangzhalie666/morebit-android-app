<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="15dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信号"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />


            <com.zjzy.morebit.view.ClearEditText
                android:id="@+id/edt_weichat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:background="@null"
                android:hint="请输入微信号"
                android:maxLines="1"
                android:inputType="text"
                android:paddingRight="30dp"
                android:textColor="@color/color_3A3A3A"
                android:textColorHint="@color/color_cccccc"
                android:textCursorDrawable="@drawable/cursordrawable_009688_inputbox"
                android:textSize="13sp" />


        </LinearLayout>

        <TextView
            style="@style/line"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <LinearLayout
            android:id="@+id/ll_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择展示位置"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="12dp">

                <RelativeLayout
                    android:id="@+id/rl_xz1"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_weight="0.9"
                    android:background="@drawable/bg_000000_1dpline_yellowbg_round_30dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_xz1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/icon_dagouxuanzhong"
                        android:drawablePadding="3dp"
                        android:text="@string/order_all"
                        android:textColor="@color/color_333333"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_xz2"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1.2"
                    android:background="@drawable/bg_d3d3d3_white_round_30dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_xz2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:gravity="center"
                        android:text="@string/my_team"
                        android:textColor="@color/color_333333"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_xz3"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_weight="0.9"
                    android:background="@drawable/bg_d3d3d3_white_round_30dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_xz3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:text="@string/service_text"
                        android:textColor="@color/color_333333"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>