                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="0MB"
                        android:textColor="@color/color_999999"
                        android:textSize="14sp" />
                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/youjiantou" />
                </LinearLayout>

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_F0F1F5"

                />

            <!--清除缓存-->
            <RelativeLayout
                android:id="@+id/item10_rl"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="清除缓存"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_tv10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="0MB"
                        android:textColor="@color/color_999999"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/youjiantou" />

                </LinearLayout>

            </RelativeLayout>


            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/background_f05557_radius_30dp"
                android:gravity="center"
                android:text="退出登录"
                android:layout_marginRight="37dp"
                android:layout_marginLeft="37dp"
                android:textColor="@color/white"
                android:textSize="16sp" />
























            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/item8_rl"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_item_color_white_gray">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
