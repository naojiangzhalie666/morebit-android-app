<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16"
        tools:text="VIP会员学堂" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:overScrollMode="never"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:background="@drawable/bg_college_btn_more"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/icon_college_arrows"
            android:gravity="center"
            android:paddingLeft="9dp"
            android:paddingRight="6dp"
            android:text="@string/check_more"
            android:textColor="@color/color_75838F"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_change"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginLeft="18dp"
            android:background="@drawable/bg_college_btn_more"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/icon_college_refresh"
            android:gravity="center"
            android:paddingLeft="9dp"
            android:paddingRight="6dp"
            android:text="@string/college_home_change"
            android:textColor="@color/color_75838F"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="@color/color_F8F8F8"/>
</LinearLayout>