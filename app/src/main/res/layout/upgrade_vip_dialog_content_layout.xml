<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fpi="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ad_root_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:clickable="true"
    >
    <RelativeLayout
        android:id="@+id/dailog_vip_grade_container"
        android:layout_width="340dp"
        android:layout_height="370dp">
        <ImageView
            android:id="@+id/img_upgrade_bg"
            android:layout_width="340dp"
            android:layout_height="370dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/bg_vip_upgrade"
            android:scaleType="fitCenter"/>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/img_upgrade_bg"
            android:layout_alignBottom="@id/img_upgrade_bg"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/update_leader_grade"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@mipmap/grade_update_bg"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="升级团队长"
                    android:textStyle="bold"
                    android:textSize="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:text="20000豆"
                    android:textColor="@color/color_885A3D"
                    android:textSize="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/update_vip_grade"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@mipmap/grade_update_bg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="升级VIP"
                    android:textStyle="bold"
                    android:textSize="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="(3600豆)"
                    android:textColor="@color/color_885A3D"
                    android:textSize="12dp"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dailog_vip_grade_container">
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"

            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/update_grade_close" />
    </RelativeLayout>

</RelativeLayout>