<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_userAgreement"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/top" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_E6E6E6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/userIcon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="45dp"
                android:scaleType="fitXY"
                android:src="@drawable/login_logo"
                app:riv_border_color="@color/white"
                app:riv_border_width="2dip"
                app:riv_corner_radius="8dp"
                app:riv_mutate_background="true"
                app:riv_oval="false" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="6">

                    <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:orientation="horizontal">-->

                    <ImageView
                        android:id="@+id/icon_shoujihao"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_shoujihao" />

                    <EditText
                        android:id="@+id/edtPhone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_toLeftOf="@+id/clear"
                        android:layout_toRightOf="@+id/icon_shoujihao"
                        android:background="@null"
                        android:hint="请输入您的手机号"
                        android:inputType="number"
                        android:maxLength="11"
                        android:paddingRight="30dp"
                        android:textColor="@color/color_3A3A3A"
                        android:textColorHint="@color/color_cccccc"
                        android:textCursorDrawable="@drawable/cursordrawable_009688_inputbox"
                        android:textSize="13sp" />
                    <!--</LinearLayout>-->

                    <ImageView
                        android:id="@+id/clear"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="21dp"
                        android:layout_marginRight="21dp"
                        android:src="@drawable/input_text_delete_icon"
                        android:visibility="gone" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignLeft="@+id/edtPhone"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_cccccc" />
                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="6">


                    <ImageView
                        android:id="@+id/icon_yaoqingma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_yaoqingma" />

                    <EditText
                        android:id="@+id/referee"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/icon_yaoqingma"
                        android:background="@null"
                        android:digits="@string/invite_digits_code"
                        android:hint="@string/input_invitation_code"
                        android:maxLength="6"
                        android:paddingRight="30dp"
                        android:textColor="@color/color_3A3A3A"
                        android:textColorHint="@color/color_cccccc"
                        android:textCursorDrawable="@drawable/cursordrawable_009688_inputbox"
                        android:textSize="13sp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignLeft="@+id/referee"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_cccccc" />
                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="6">


                    <ImageView
                        android:id="@+id/icon_yanzhengma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/icon_yanzhengma" />

                    <EditText
                        android:id="@+id/edt_yanzhengma"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_toLeftOf="@+id/tv_yanzhengma"
                        android:layout_toRightOf="@+id/icon_yanzhengma"
                        android:layout_weight="1"
                        android:background="@null"
                        android:digits="0123456789"
                        android:hint="请输入您的验证码"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textColor="@color/color_3A3A3A"
                        android:textColorHint="@color/color_cccccc"
                        android:textCursorDrawable="@drawable/cursordrawable_009688_inputbox"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_yanzhengma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_000000_1dpline_yellowbg_round_15dp"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:text="获取验证码"
                        android:textColor="@color/color_2B0900"
                        android:textSize="13sp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignLeft="@+id/edt_yanzhengma"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_cccccc" />

                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/login"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="6"
                    android:background="@drawable/bg_000000_1dpline_yellowbg_round_15dp"
                    android:gravity="center"
                    android:text="注册"
                    android:textColor="@color/color_2B0900"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_userAgreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/login_agree_tag_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="同意"
            android:textColor="@color/color_666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/userAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:text="《多点优选用户协议》"
            android:textColor="@color/color_F32F19"
            android:textSize="13sp" />
    </LinearLayout>


</RelativeLayout>