<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:background="@drawable/bg_ffffff_12dp"
        android:layout_width="220dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_height="wrap_content">



        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写微信号"
            android:textColor="#ff333333"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            />

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/tv2"
            android:layout_below="@+id/title"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:gravity="center"
            android:text="请填写正确的微信号，方便您的直属上下级联系您"
            android:textColor="#ff999999"
            android:textSize="14sp"
            />

        <EditText
            android:textCursorDrawable="@drawable/cursordrawable_009688_inputbox"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv2"
            android:id="@+id/mEditText"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/background_f0f1f5_radius_15dp"
            android:textColor="@color/color_999999"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            />



            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/mEditText"
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/background_radius_haibao_15dp"
                android:gravity="center"
                android:text="保存"
                android:textColor="#ffffffff"
                android:textSize="14sp" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_ok"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可在个人信息处修改微信号"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />



        <ImageView
            android:id="@+id/diss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wx_tian_icon"
            android:layout_alignParentRight="true"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            />

    </RelativeLayout>



</LinearLayout>