<!--                tools:text="天猫天发送到水电费水电费水电费发送的方式防守打法"/>-->

            <com.lovejjfg.powertext.LabelTextView
                android:id="@+id/pdd_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/color_333333"
                android:textSize="13sp"
                app:defaultLineCount="2"
                app:labelText="天猫天发送到水电费水电费水电费发送的方式防守打法"
                app:labelPaddingHorizontal="4dp"
                app:labelStrokeWidth="0.5dp"
                app:labelStrokeRadius="1dp"
                app:labelStrokeColor="@color/color_DB493E"
                app:labelTextColor="@color/color_DB493E"
                app:labelTextSize="10sp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/title"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/shop_icon"
                android:scaleType="centerInside"/>


            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#A4A4A4"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:textSize="11sp"
                tools:text="奔波儿灞旗舰店"
                android:singleLine="true"
                android:ellipsize="end"
                />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/ll_return_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:background="@drawable/bg_quan_2dp"
                    android:paddingRight="4dp"
                    android:paddingLeft="4dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/sp_11"
                    tools:text="10000000000元"/>
            </LinearLayout>

            <TextView
                android:id="@+id/commission"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_commission_1dp"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:maxLines="1"
                android:textColor="@color/color_FA6400"
                android:textSize="@dimen/sp_11"
                tools:text="250人"/>
        </LinearLayout>
<!--        <TextView-->
