<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

           >

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_home_list_grad_buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--标题-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_rl">


            <TextView
                android:id="@+id/good_pdd_tag"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拼多多"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_FFFFFF"
                android:background="@drawable/bg_pdd_icon_2dp"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/good_pdd_tag"
                android:lineSpacingExtra="3dp"
                android:ellipsize="end"
                android:layout_marginRight="2dp"
                android:maxLines="2"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_13"
                tools:text="天猫天发送到水电费水电费水电费发送的方式防守打法"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_below="@+id/title"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffee403a"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:background="@drawable/bg_pdd_shopping_2dp"
            android:textSize="11sp"
            tools:text="奔波儿灞旗舰店"
            android:singleLine="true"
            android:ellipsize="end"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/ll_return_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:background="@drawable/bg_quan_2dp"
                    android:paddingRight="4dp"
                    android:paddingLeft="4dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/color_ffe800"
                    android:textSize="@dimen/sp_11"
                    tools:text="10000000000元"/>
            </LinearLayout>

            <TextView
                android:id="@+id/commission"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_quan_2dp"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:maxLines="1"
                android:textColor="@color/color_ffe800"
                android:textSize="@dimen/sp_11"
                tools:text="250人"/>
        </LinearLayout>
<!--        <TextView-->
<!--            android:id="@+id/subsidiesPriceRankTv"-->
<!--            android:text=""-->
<!--            style="@style/subsidiesPriceItem"-->
<!--            android:visibility="visible"-->
<!--            android:layout_marginTop="5dp"-->
<!--            />-->

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/discount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$60"
                android:layout_gravity="bottom"
                android:textColor="@color/color_F32F19"
                android:textSize="@dimen/sp_19"/>

            <TextView
                android:id="@+id/price"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_11"
                tools:text="$60"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="@color/color_666666"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_11"
                tools:text="销量：2505"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>