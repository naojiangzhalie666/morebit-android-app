<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5"
    >

    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/shareView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="62dp"
                android:layout_height="match_parent">
            </LinearLayout>
            <ImageView
                android:id="@+id/goodImg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="120dp"/>
            <LinearLayout
                android:layout_width="62dp"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:orientation="horizontal">
            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/userIcon"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="fitXY"
                android:src="@color/white"
                app:riv_border_color="@color/white"
                app:riv_border_width="2dip"
                app:riv_corner_radius="0dip"
                app:riv_mutate_background="true"
                app:riv_oval="true" />
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="未设置"
                android:layout_marginLeft="12dp"
                android:textColor="@color/color_2B0900"
                android:textSize="15sp" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="我正在申请价值"
                        android:textColor="@color/color_333333"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/prise_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:lines="1"
                        android:maxLines="1"
                        android:text=""
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/color_F32F19"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:lineSpacingExtra="1dp"
                    android:lines="2"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="@color/color_333333"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:lineSpacingExtra="0dp"
                    android:text="温馨提示：福利免费送，您也可以像我 一样免费申请，但仅剩下少量了，赶紧 下手哦！"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="20dp"
                android:minHeight="110dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/qrcode_img"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:scaleType="fitXY"/>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="15dp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="长按识别二维码"
            android:textColor="@color/color_FF5E13"
            android:textSize="10sp" />
            </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:text="如何申请：\n        识别二维码 >复制邀请码 >登录APP免单商城申请"
            android:textColor="@color/color_F32F19"
            android:textSize="14sp" />

    </LinearLayout>
        <LinearLayout
            android:layout_width="62dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/btn_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:background="@drawable/ic_goodsdetail_back"
                android:layout_marginTop="0dp">
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:textSize="14sp"
            android:textColor="@color/color_666666"
            android:text="分享到" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv"
            android:background="@color/color_cccccc" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv"
            android:background="@color/color_cccccc" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingBottom="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/weixinFriend"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/freebillposter_wechat"
                android:textSize="14sp"
                android:text=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="微信好友"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/weixinCircle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/ic_poster_wchartfriend"
                android:textSize="14sp"
                android:text=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="朋友圈"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sinaWeibo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/ic_poster_sina"
                android:textSize="14sp"
                android:text=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="微博"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/qqFriend"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/ic_poster_qq"
                android:textSize="14sp"
                android:text=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="QQ"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/qqRoom"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/iv_share_qqspace"
                android:textSize="14sp"
                android:text=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="QQ空间"/>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>
