<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <com.zjzy.morebit.view.AspectRatioView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:aspectRatio="6">

        <ImageView
            android:background="@drawable/no_login_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="match_parent">

            <View
                android:layout_width="0dp"
                android:layout_weight="0.05"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/no_login_head"
                android:layout_width="27dp"
                android:layout_height="27dp"/>

            <TextView
                android:layout_width="0dp"
                android:textSize="13sp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="12dp"
                android:textColor="@color/white"
                android:text="@string/immediately_login_hint"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_000000_1dpline_round_30dp"
                android:text="@string/immediately_login"
                android:paddingTop="4dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:paddingBottom="4dp"
                android:textColor="@color/color_333333"
                android:textSize="12sp"
                />

            <View
                android:layout_width="0dp"
                android:layout_weight="0.064"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.zjzy.morebit.view.AspectRatioView>

</RelativeLayout>