<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colcor_black_333333"
    android:orientation="vertical"
    >
<!--    android:background="@color/colcor_black_333333"-->
    <RelativeLayout
        android:id="@+id/rl_number_header1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp">

    <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/userIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="12dp"
                android:scaleType="fitXY"
                android:src="@color/white"
                android:layout_centerVertical="true"
                app:riv_border_color="@color/white"
                app:riv_border_width="2dp"
                app:riv_corner_radius="0dip"
                app:riv_mutate_background="true"
                app:riv_oval="true" />

        <!--显示晋升按钮-->
        <TextView
            android:id="@+id/btn_number_update_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/sp_16"
            android:text="立即晋升"
            android:textColor="@color/color_000000"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/btn_bg_gold"
            android:layout_alignBottom="@id/userIcon"
            android:layout_alignParentRight="true"
            />
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="60dp"
         android:layout_centerVertical="true"
         android:layout_marginLeft="10dp"
         android:layout_toRightOf="@id/userIcon">
         <TextView
             android:id="@+id/user_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:ellipsize="end"
             android:maxLines="1"
             android:textColor="@color/color_FFFFFF"
             android:textSize="@dimen/sp_15"
             tools:text="昵称" />
         <LinearLayout
             android:id="@+id/ll_user_grade"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/bg_gray_grade_vip"
             android:layout_toRightOf="@id/user_name"
             android:layout_centerVertical="true"
             android:paddingRight="4dp"
             android:layout_marginLeft="10dp">
             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:layout_gravity="center_vertical"
                 android:scaleType="centerInside"
                 android:src="@mipmap/icon_grade_prex"/>
             <TextView
                 android:id="@+id/tv_user_type"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:text="会员"
                 android:textColor="@color/color_FFFFFF"
                 android:textSize="@dimen/sp_12"/>
         </LinearLayout>
     </RelativeLayout>

        <!--显示成长值-->
        <RelativeLayout
            android:id="@+id/rl_duodou_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userIcon"
            android:layout_alignLeft="@id/userIcon"
            android:layout_marginTop="30dp"
            >
            <TextView
                android:id="@+id/more_corn_biaozhun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="5dp"
                android:text="成长值：0/20000"
                android:textColor="@color/colcor_D3D3D3"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/tv_growth_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="5dp"
                android:text="@string/vip_growth_value"
                android:textColor="@color/colcor_D3D3D3"
                android:textSize="@dimen/sp_12"
                android:layout_alignParentRight="true"/>

            <com.zjzy.morebit.view.HorzProgressView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/horzProgressView"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_below="@id/more_corn_biaozhun"
                android:layout_marginTop="10dp"
                app:liys_progress_line_max="100"
                app:liys_progress_line_progress="20"
                app:liys_progress_line_outColor="@color/colcor_gold"
                app:liys_progress_line_inDrawable="@drawable/vip_progress_bg"/>
        </RelativeLayout>



    </RelativeLayout>


         <!--文案固定-->
         <LinearLayout
             android:id="@+id/rl_more_xuyouxuan_jingcai"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:paddingLeft="20dp"
             android:paddingRight="20dp"
             android:orientation="horizontal"
             >
             <ImageView
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_weight="1"
                 android:src="@mipmap/more_youxuan_txt"
                 android:scaleType="centerInside"/>

             <ImageView
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_gravity="center"
                 android:src="@mipmap/number_icon_shape"
                 android:scaleType="centerInside"
                 android:padding="10dp"/>
             <ImageView
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:src="@mipmap/more_jingcai"
                 android:layout_weight="1"
                 android:scaleType="centerInside"/>

         </LinearLayout>
         <!--赞多豆享特权-->
         <LinearLayout
             android:id="@+id/ll_more_corn_priority"
             android:layout_width="match_parent"
             android:layout_height="20dp"
             android:layout_marginTop="10dp"
             android:orientation="horizontal"
             >
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="攒成长值享特权"
                 android:textColor="@color/color_958360"
                 android:textStyle="bold"
                 android:textSize="@dimen/sp_15"
                 android:gravity="center"
                 />

         </LinearLayout>
         <!--欢迎语-->
         <RelativeLayout
             android:id="@+id/rl_welcome_txt"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             >
             <TextView
                 android:id="@+id/txt_number_welcome_hint"
                 android:layout_width="match_parent"
                 android:layout_height="30dp"
                 android:textSize="@dimen/sp_12"
                 android:layout_margin="10dp"
                 android:textColor="@color/color_FFFFFF"
                 android:text="@string/number_welcome_hint"
                 android:gravity="center_vertical"
                 android:paddingLeft="30dp"
                 android:background="@drawable/number_welcome_hint_bg"
                 />

             <ImageView
                 android:layout_width="15dp"
                 android:layout_height="15dp"
                 android:layout_marginLeft="10dp"
                 android:layout_alignLeft="@id/txt_number_welcome_hint"
                 android:layout_centerVertical="true"
                 android:src="@mipmap/number_tuiguang"/>
         </RelativeLayout>
