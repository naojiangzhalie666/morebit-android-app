<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colcor_black_333333"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/rl_number_header1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

    <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/userIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="12dp"
                android:scaleType="fitXY"
                android:src="@color/white"
                android:layout_centerVertical="true"
                app:riv_border_color="@color/white"
                app:riv_border_width="2dp"
                app:riv_corner_radius="0dip"
                app:riv_mutate_background="true"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/userIcon"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/sp_15"
                tools:text="昵称" />

            <TextView
                android:id="@+id/lb_user_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/userName"
                android:layout_marginLeft="30dp"
                android:layout_alignBottom="@id/userName"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_EBC69B"
                android:textSize="@dimen/sp_12"
                tools:text="会员" />

    <!--积分进度条-->

                <RelativeLayout
                    android:id="@+id/rl_progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/userName"
                    android:layout_alignLeft="@id/userName">
                    <RelativeLayout
                        android:layout_width="180dp"
                        android:layout_height="5dp"
                        android:background="@drawable/progress_bar_bg_gray"
                        />
                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="5dp"
                        android:background="@drawable/progress_bar_bg_gold"/>
                </RelativeLayout>

            <!--显示多豆-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginTop="3dp"
                    android:layout_alignLeft="@id/rl_progress_bar"
                    android:layout_below="@id/rl_progress_bar">

                    <TextView
                        android:id="@+id/lb_more_corn"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textColor="@color/colcor_D3D3D3"
                        android:textSize="@dimen/sp_12"
                        tools:text="多豆：" />

                    <TextView
                        android:id="@+id/copy_invitation_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/lb_more_corn"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="3600/20000"
                        android:textColor="@color/colcor_D3D3D3"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>



                <!--显示晋升按钮-->
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:textSize="@dimen/sp_16"
                    android:text="立即晋升"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/btn_bg_gold"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/userIcon"
                    />
    </RelativeLayout>

    <!--文案固定-->
    <LinearLayout
        android:id="@+id/rl_more_xuyouxuan_jingcai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/more_youxuan_txt"
            android:scaleType="centerInside"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/number_icon_shape"
            android:scaleType="centerInside"
            android:padding="10dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/more_jingcai"
            android:layout_weight="1"
            android:scaleType="centerInside"/>

    </LinearLayout>
    <!--赞多豆享特权-->
    <LinearLayout
        android:id="@+id/ll_more_corn_priority"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="赞多豆享特权"
            android:textColor="@color/color_958360"
            android:textStyle="bold"
            android:textSize="@dimen/sp_15"
            android:gravity="center"
            />

    </LinearLayout>
    <!--欢迎语-->
    <RelativeLayout
        android:id="@+id/rl_welcome_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:id="@+id/txt_number_welcome_hint"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="@dimen/sp_12"
        android:layout_margin="10dp"
        android:textColor="@color/color_FFFFFF"
        android:text="@string/number_welcome_hint"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:background="@drawable/number_welcome_hint_bg"
        />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="10dp"
        android:layout_alignLeft="@id/txt_number_welcome_hint"
        android:layout_centerVertical="true"
        android:src="@mipmap/number_tuiguang"/>
    </RelativeLayout>

    <!--VIP、团队长、团队长最终可享特权-->
    <RelativeLayout
        android:id="@+id/rl_grade_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <!--vip可享特权-->
        <RelativeLayout
            android:id="@+id/rl_grade_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:id="@+id/number_grade_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="团队长"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_22"
                    android:textColor="@color/colcor_gold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/colcor_gold"
                    android:text="可享特权"
                    android:layout_toRightOf="@id/number_grade_name"
                    android:layout_alignBottom="@id/number_grade_name"/>
            </RelativeLayout>
        </RelativeLayout>


        <!--1～3 三个特性-->
        <LinearLayout
            android:id="@+id/number_grade_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/rl_grade_name">
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/number_sheng"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colcor_gold"
                    android:textSize="@dimen/sp_12"
                    android:text="购物更省钱"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/number_share"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colcor_gold"
                    android:textSize="@dimen/sp_12"
                    android:text="分享奖励高"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/number_tuan"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colcor_gold"
                    android:textSize="@dimen/sp_12"
                    android:text="团队奖不停"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
        </LinearLayout>

        <!--4～6 三个特性-->
        <LinearLayout
            android:id="@+id/number_grade_46"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/number_grade_13">
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/number_daka"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colcor_gold"
                    android:textSize="@dimen/sp_12"
                    android:text="大咖辅导"
                    android:layout_gravity="center_horizontal"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/number_yunying"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colcor_gold"
                    android:textSize="@dimen/sp_12"
                    android:text="专属后台运营"
                    android:layout_gravity="center_horizontal"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/number_good_invited"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colcor_gold"
                    android:textSize="@dimen/sp_12"
                    android:text="靓号邀请码"
                    android:layout_gravity="center_horizontal"/>


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <!--购买商品送多豆-->
    <LinearLayout
        android:id="@+id/rl_buy_goods_hint"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_FFFFFF"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="购买商品送多豆"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            android:textSize="@dimen/sp_15"
            android:gravity="center"
            android:layout_gravity="center"
            />

    </LinearLayout>



</LinearLayout>

