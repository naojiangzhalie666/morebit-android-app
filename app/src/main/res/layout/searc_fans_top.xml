<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:focusableInTouchMode="true">


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:background="@color/transparent"
        android:src="@drawable/btn_title_return_icon" />

    <TextView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:text="搜索"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_toLeftOf="@+id/search"
        android:layout_toRightOf="@+id/btn_back"
        android:background="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false">

        <RelativeLayout
            android:id="@+id/search_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_FFC200">



            <com.zjzy.morebit.view.ClearEditText
                android:id="@+id/search_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/icon_search"
                android:gravity="left|center_vertical"
                android:background="@color/transparent"
                android:hint="输入粉丝手机号/邀请码/备注"
                android:imeOptions="actionSearch"
                android:layout_marginRight="6dp"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_333333"
                android:textCursorDrawable="@drawable/cursordrawable_009688_inputbox"
                android:textSize="12sp"
                app:deleteImg="@drawable/my_fans_clean_icon" />

            <ImageView
                android:id="@+id/icon_search"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/icon_shousuo" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
