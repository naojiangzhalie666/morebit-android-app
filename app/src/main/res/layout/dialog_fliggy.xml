<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


<LinearLayout
    android:layout_width="261dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_editoneline_dialog_whilebg_10dp"
    android:orientation="vertical"
    android:paddingBottom="19dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="23dp">
        <View android:layout_height="1px" android:layout_width="28dp" android:background="@color/color_333333" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fliggy_title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/color_333333"
            android:textSize="18sp"/>
        <View android:layout_height="1px" android:layout_width="28dp" android:background="@color/color_333333" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="22dp"
        android:orientation="horizontal">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/fliggy_content"
              android:textColor="@color/color_333333"
              android:textSize="@dimen/sp_12"/>
    </RelativeLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="23dp">

        <TextView
            android:id="@+id/findOrderTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_flygy_findorder"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="找回订单"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:layout_marginRight="6dp"/>

        <TextView
            android:id="@+id/openFlygyTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_guessdialog_shouyi"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="前往飞猪"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:layout_marginLeft="6dp"/>

    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:id="@+id/closeLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_dialog_close"
            android:layout_gravity="center"

            />
    </LinearLayout>

</LinearLayout>