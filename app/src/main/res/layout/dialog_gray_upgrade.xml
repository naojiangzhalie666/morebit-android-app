<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


<LinearLayout
    android:layout_width="261dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_editoneline_dialog_whilebg_10dp"
    android:orientation="vertical"
    android:paddingBottom="19dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="18dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gray_upgrade_title"
            android:textColor="@color/color_333333"
            android:textSize="16sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"

        android:layout_marginRight="25dp"
        android:layout_marginTop="33dp"
        android:orientation="horizontal">
          <TextView
              android:id="@+id/content"
              android:layout_centerInParent="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:textColor="@color/color_666666"
              android:textSize="@dimen/sp_15"
              />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="23dp">

        <TextView
            android:id="@+id/cancelTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_flygy_findorder"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="不感兴趣"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:layout_marginRight="6dp"/>

        <TextView
            android:id="@+id/toUpgradeTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_guessdialog_shouyi"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="去看看"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:layout_marginLeft="6dp"/>

    </LinearLayout>

</LinearLayout>



</LinearLayout>