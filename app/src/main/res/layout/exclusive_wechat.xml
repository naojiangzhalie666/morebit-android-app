<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_service_wechat_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingRight="20dp"
        android:paddingBottom="2dp"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/skip"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            />
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:src="@drawable/icon_arrow_right"
              android:layout_centerVertical="true"
              />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/image_service_wxcode_bg"
         android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="-1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专属客服"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_333333"
            android:layout_marginTop="95dp"/>

        <ImageView
            android:id="@+id/qrcode"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:scaleType="fitXY"
            android:layout_marginTop="25dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加微信，了解更多升级权益"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_333333"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_stroke_ffd800_1dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14"
                tools:text="@string/text_exclusive_wechat"
                android:id="@+id/text_qrcode"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginRight="-10dp"
                />

            <TextView
                android:id="@+id/copy_exclusive_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_radius_haibao_15dp"
                android:gravity="center"
                android:paddingBottom="6dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="6dp"
                android:text="@string/copy"
                android:textColor="@color/color_333333"
                android:textSize="13sp"
                android:layout_marginBottom="30dp"
               />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="@drawable/image_service_action_bg"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp">
             <LinearLayout
                 android:id="@+id/saveQRBtn"
                android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:orientation="vertical">
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/image_save_wx"
                           />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="保存二维码"
                     android:textColor="@color/color_333333"
                     android:textSize="@dimen/sp_12"
                     android:layout_marginTop="9dp"/>
             </LinearLayout>
        <LinearLayout
            android:id="@+id/openWxBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_wx_open"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开微信"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="9dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>