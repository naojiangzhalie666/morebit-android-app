<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/color_F0F1F5"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_top"
        style="@style/TopSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_head_title"
            android:textSize="18sp"
            android:textColor="@color/color_333333"
            android:layout_centerInParent="true"
            android:text="账户安全" />

        <LinearLayout
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:paddingRight="35dp"
            android:paddingBottom="10dp">

            <ImageView
                android:src="@drawable/btn_title_return_icon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true" />
        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="12dp"
        android:id="@+id/modify_phone_num"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/btn_item_color_white_gray">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="手机号"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="修改"
                android:textColor="@color/color_999999"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/youjiantou" />

        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_F0F1F5"

        />
    <RelativeLayout
        android:id="@+id/modify_password"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/btn_item_color_white_gray">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/modify_password"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="修改"
                android:textColor="@color/color_999999"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/youjiantou" />

        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_F0F1F5"

        />
    <RelativeLayout
        android:id="@+id/item8_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/btn_item_color_white_gray">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="支付宝绑定"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_tv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:maxEms="13"
                android:singleLine="true"
                android:text="未绑定"
                android:textColor="@color/color_999999"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/youjiantou" />

        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_F0F1F5"

        />
    <!--我的收货地址 -->
    <RelativeLayout

        android:id="@+id/my_goods_address"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/btn_item_color_white_gray">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="我的地址"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/youjiantou" />

        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_F0F1F5"

        />
    <RelativeLayout
        android:id="@+id/item4_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/btn_item_color_white_gray">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="用户协议"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="17dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:layout_marginRight="15dp"
            android:src="@drawable/youjiantou" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_F0F1F5"

        />
    <RelativeLayout
        android:id="@+id/item3_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/btn_item_color_white_gray">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="隐私协议"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="17dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/youjiantou" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_F0F1F5"

        />
    <RelativeLayout
        android:id="@+id/item_account_destroy"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/btn_item_color_white_gray">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:textColor="@color/color_333333"
                android:textSize="16sp"
                android:text="用户注销" />
        </LinearLayout>
        <ImageView
            android:layout_width="17dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/youjiantou"/>
    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <ImageView
                android:id="@+id/userIcon_arrow"
                android:layout_width="17dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/youjiantou"/>

            <TextView
                android:layout_marginLeft="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="头像"
                android:textColor="@color/color_333333"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/userIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/userIcon_arrow"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"
                android:src="@color/white"/>
        </RelativeLayout>

        <View style="@style/line_f1f1f1"/>

        <RelativeLayout
            android:id="@+id/rl_nickname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:layout_marginLeft="13dp"
                android:layout_centerVertical="true"
                android:textColor="@color/color_333333"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:ellipsize="end"
                    android:maxEms="13"
                    android:singleLine="true"
                    android:textColor="@color/color_999999"
                    android:textSize="13sp"/>

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/youjiantou"/>
            </LinearLayout>
        </RelativeLayout>


        <View style="@style/line_f1f1f1"/>

        <RelativeLayout
            android:id="@+id/rl_sex"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textColor="@color/color_333333"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="13dp"
                android:layout_marginBottom="17dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:ellipsize="end"
                    android:maxEms="13"
                    android:text="请选择"
                    android:singleLine="true"
                    android:textColor="@color/color_999999"
                    android:textSize="13sp"/>

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/youjiantou"/>
            </LinearLayout>
        </RelativeLayout>

        <View style="@style/line_f1f1f1"/>

        <RelativeLayout
            android:id="@+id/rl_age"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出生日期"
                android:layout_marginLeft="13dp"
                android:layout_centerVertical="true"
                android:textColor="@color/color_333333"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:ellipsize="end"
                    android:maxEms="13"
                    android:text="请选择"
                    android:singleLine="true"
                    android:textColor="@color/color_999999"
                    android:textSize="13sp"/>

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/youjiantou"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>