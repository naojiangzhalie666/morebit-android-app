<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_earnings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



<!--    <com.yyp.xshadow.XShadow-->
<!--        app:shadow_side="left|bottom|right"-->
<!--        app:shadow_width="2dp"-->
<!--        app:shadow_color="#FDCEE2"-->
<!--        app:corner_radius="20dp"-->
<!--        app:shadow_radius="50dp"-->
<!--        android:padding="2dp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->

    <com.zyp.cardview.YcCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/transparent"
        app:cardUseCompatPadding="false"
        app:ycCardCornerRadius="12dp"
        app:ycCardElevation="2dp"
        app:ycCardPreventCornerOverlap="false"
        app:ycStartShadowColor="@color/colcor_D3D3D3">
        <LinearLayout
            android:id="@+id/ll_mine_earnings"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/earning_bg_tixian">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:orientation="horizontal"
                >


                <ImageView
                    android:id="@+id/iv_wenhao"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/order_question" />

                    <TextView
                        android:id="@+id/tv_y"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:text="累计收益"
                        android:textColor="@color/color_F05557"
                        android:textSize="14sp" />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text=""
                        android:textColor="@color/color_FF645B"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_remainder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="0.0"
                        android:textStyle="bold"
                        android:textColor="@color/color_FF645B"
                        android:textSize="18sp" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/earning_right_tixina"
                    />
                </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFEEEE"
                />

            <LinearLayout
                android:id="@+id/integer_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:orientation="horizontal"
                >



                <ImageView
                    android:id="@+id/img_yu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/order_question" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:text="累计预估积分"
                    android:textColor="@color/color_F05557"
                    android:textSize="14sp" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text=""
                    android:textColor="@color/color_FF645B"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="0.0"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/color_FF645B"
                    android:textSize="18sp" />


                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/earning_right_tixina"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFEEEE"
                />


            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日预估收益（元）"
                        android:textColor="#ff999999"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:id="@+id/today_yugu"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.42"
                        android:textStyle="bold"
                        android:textColor="#fff05557"
                        android:textSize="18sp"
                        />


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#5F2C06"
                    android:layout_gravity="center_vertical"
                    />

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日预估获积分"
                        android:textColor="#ff999999"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:id="@+id/today_jifen"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.42"
                        android:textColor="#fff05557"
                        android:textSize="18sp"
                        />


                </LinearLayout>






            </LinearLayout>





        </LinearLayout>
        </com.zyp.cardview.YcCardView>
<!--    </com.yyp.xshadow.XShadow>-->
</LinearLayout>
