<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="133dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:src="@drawable/icon_default" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_2B0900"
        android:textSize="@dimen/sp_12"
        tools:text="水晶手链分手的距离看风景的史莱克 的所得税法" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/tv_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="¥"
            android:textColor="@color/color_F32F19"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_yuan"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/tv_yuan"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:textColor="@color/color_F32F19"
            android:textSize="@dimen/sp_16"
            tools:text="%6" />

        <TextView
            android:id="@+id/invite_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_yuan"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_10"
            tools:text="邀请：55" />
    </RelativeLayout>

</LinearLayout>