<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:background="@drawable/bg_ffffff_12dp"
        android:layout_width="270dp"
        android:paddingBottom="27dp"
        android:layout_height="wrap_content">



        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认升级"
            android:textStyle="bold"
            android:textColor="@color/color_F05557"
            android:layout_marginTop="20dp"
            android:drawableLeft="@mipmap/shopkeper_upgrade_icon"
            android:drawablePadding="12dp"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/tv2"
            android:layout_below="@+id/title"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="您当前成长值已满足掌柜"
            android:drawableRight="@mipmap/shopkpeer_icon"
            android:drawablePadding="4dp"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tv2"
            android:id="@+id/tv_content"
            android:layout_alignLeft="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="20dp"
            android:text="升级条件，确认升级？"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            />



            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_content"
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="33dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/background_radius_haibao_25dp"
                android:gravity="center"
                android:text="立即升级"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="#ffffffff"
                android:textSize="16sp" />


        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/upgrade_diss"
            android:layout_alignParentRight="true"
            android:padding="12dp"
            />



    </RelativeLayout>



</LinearLayout>