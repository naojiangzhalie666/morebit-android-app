<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:layout_marginTop="25dp"
        android:id="@+id/news_icon"
        android:layout_alignParentRight="true"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@mipmap/news_icon"
        android:layout_marginRight="5dp"
        />
    <ImageView
        android:id="@+id/news_jiantou"
       android:layout_toLeftOf="@+id/news_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/news_jiantou"
        android:layout_below="@+id/news_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="20dp"

        />
    <ImageView
        android:layout_toLeftOf="@+id/news_jiantou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/news"
        android:layout_alignBottom="@+id/news_jiantou"
        android:layout_marginRight="12dp"
        />



    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/search_jump"
            android:layout_marginLeft="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jump"
            />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            android:src="@mipmap/search_next"
            />

    </RelativeLayout>

</RelativeLayout>