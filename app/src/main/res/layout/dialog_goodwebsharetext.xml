<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_editoneline_dialog_whilebg_8dp"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="14dp"
        android:text="分享标题："
        android:textSize="14sp"
        android:textColor="@color/color_333333"/>

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/huise_jiben"
        android:hint="分享标题"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="9dp"
        android:textSize="12dp"
        android:padding="12dp"
        android:gravity="left|center_vertical"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="14dp"
        android:text="分享推荐语："
        android:textSize="14sp"
        android:textColor="@color/color_333333"/>

    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/huise_jiben"
        android:hint="分享内容描述"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="9dp"
        android:textSize="12dp"
        android:padding="12dp"
        android:gravity="left|top"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        android:layout_marginBottom="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_F6F4F5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_dialog_btnbg_fcee8b_8dp_left"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="取消"
            android:textSize="14sp"
            android:textColor="@color/color_2B0900"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/huise_jiben"/>
        <TextView
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_dialog_btnbg_fcdf0a_8dp_right"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="确定"
            android:textSize="14sp"
            android:textColor="@color/color_2B0900"/>

    </LinearLayout>

</LinearLayout>