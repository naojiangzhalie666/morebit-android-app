<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/net_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F0F1F5"
    android:orientation="vertical">


    <com.donkingliang.consecutivescroller.ConsecutiveScrollerLayout
        android:id="@+id/sroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:isPermanent="true">


        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/color_F0F1F5" />

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <RelativeLayout
                android:layout_marginRight="3dp"
                android:layout_width="0dp"
                android:layout_height="280dp"
                android:background="@drawable/bg_ffffff_12dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/vip_must_quanyi"
                    />


                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/vip_right"
                    android:text="VIP"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textSize="16sp"
                    android:drawablePadding="8dp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/color_333333"
                    />
                <TextView
                    android:id="@+id/tv2"
                    android:layout_below="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最高返现奖励"
                    android:layout_marginTop="8dp"
                    android:textColor="#ffc4b2a1"
                    android:layout_centerHorizontal="true"
                    android:textSize="12sp"
                    />
                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_below="@+id/tv2"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/zg_fl_vip"
                        />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/fx_jl_vip"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_below="@+id/ll2"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/yx_jl_vip"
                        />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/hl_yh_vip"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_e9e7e7_radius_12dp"
                    android:layout_below="@+id/ll3"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="预计每年省赚"
                        android:textColor="#ffc4b2a1"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="6800.0元"
                        android:textColor="#fff05557"
                        android:textSize="20sp"
                        />


                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="3dp"
                android:layout_width="0dp"
                android:layout_height="280dp"
                android:background="@drawable/bg_ffffff_12dp"
                android:layout_weight="1">




                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/zg_icon"
                    android:text="掌柜"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textSize="16sp"
                    android:drawablePadding="8dp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/color_333333"
                    />
                <TextView
                    android:id="@+id/tv4"
                    android:layout_below="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最高返现奖励"
                    android:layout_marginTop="8dp"
                    android:textColor="#D58D3D"
                    android:layout_centerHorizontal="true"
                    android:textSize="12sp"
                    />
                <LinearLayout
                    android:id="@+id/ll4"
                    android:layout_below="@+id/tv4"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/zg_fl_zg"
                        />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/fx_jl_zg"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll4"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/yx_jl_zg" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:src="@mipmap/zx_td_zg" />


                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_ff9f2_radius_12dp"
                    android:layout_below="@+id/ll5"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="预计每年省赚"
                        android:textColor="#D58D3D"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="16800.0元"
                        android:textColor="#fff05557"
                        android:textSize="20sp"
                        />


                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/color_F0F1F5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_isConsecutive="false"
            app:layout_isSticky="true">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcy_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/color_F8F8F8" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcy_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:paddingBottom="20dp" />

        </LinearLayout>

    </com.donkingliang.consecutivescroller.ConsecutiveScrollerLayout>
</LinearLayout>
