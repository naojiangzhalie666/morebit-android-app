<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="@color/white"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:id="@+id/iten_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            >

            <TextView
                android:id="@+id/createDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text=""
                android:textColor="@color/color_333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/jiesuanDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_F5F5F5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="11dp">

            <android.support.v7.widget.CardView
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                app:cardCornerRadius="5dp"
                android:id="@+id/icon"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false">

                <ImageView
                    android:id="@+id/pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/icon"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/subsidiesPriceTv"
                android:text=""
                style="@style/subsidiesPriceItem"
                android:layout_marginTop="3dp"
                android:visibility="gone"
                android:layout_toRightOf="@+id/icon"
                android:layout_marginLeft="13dp"
                android:layout_below="@id/title"
                />

            <TextView
                android:id="@+id/xfyugu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@id/icon"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:paddingTop="6dp"
                android:textColor="@color/color_DC2228"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                >
                <TextView
                    android:id="@+id/yjyugu_tv"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="13dp"
                    android:layout_height="15dp"
                    android:background="@drawable/bg_commission"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="11dp"
                    tools:text="250人"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/ship_goods_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_ship"
                        android:gravity="center"
                        android:padding="3dp"
                        android:textColor="@color/color_999999"
                        android:textSize="14sp"
                        android:text="查看物流"
                        />
                    <TextView
                        android:id="@+id/receiver_goods_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="3dp"
                        android:background="@drawable/bg_receiver_goods"
                        android:textColor="@color/color_FD5212"
                        android:textSize="14sp"
                        android:text="确认收货"
                        />
                </LinearLayout>

            </RelativeLayout>



        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/color_F5F5F5" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="9dp"
            android:paddingLeft="13dp"
            android:paddingTop="9dp">

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_11" />


            <TextView
                android:layout_below="@+id/tv_order"
                android:id="@+id/jiesuanDay_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="13dp"
                android:layout_marginTop="6dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/color_666666"
                android:textSize="11sp" />


            <TextView
                android:id="@+id/tv_copy"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/bg_recycle_item_order_copy"
                android:text="@string/copy"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
