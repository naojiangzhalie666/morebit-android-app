<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/color_F0F1F5" />


        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="7dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                >
                <com.flyco.tablayout.SlidingTabLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_circle_title_round_30dp"
                    android:layout_height="30dp"
                    android:id="@+id/tab"
                    android:layout_gravity="center_horizontal"
                    tl:tl_bar_stroke_width="0dp"
                    tl:tl_bar_color="@color/color_F7F7F7"
                    tl:tl_indicator_color="@color/color_FFD800"
                    tl:tl_indicator_anim_enable="true"
                    tl:tl_indicator_margin_left="0dp"
                    tl:tl_indicator_margin_right="0dp"
                    tl:tl_indicator_margin_top="0dp"
                    tl:tl_indicator_margin_bottom="0dp"
                    tl:tl_indicator_style="BLOCK"
                    tl:tl_indicator_bounce_enable="true"
                    tl:tl_textUnselectColor="@color/color_333333"
                    tl:tl_textSelectColor="@color/color_FFFFFF"
                    tl:tl_textsize="14sp"
                    tl:tl_tab_space_equal="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />


            </RelativeLayout>

            <ImageView
                android:id="@+id/search_circle"
                android:layout_marginBottom="7dp"
                android:paddingLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="12dp"
                android:src="@mipmap/search_home"
                />

        </LinearLayout>



    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>