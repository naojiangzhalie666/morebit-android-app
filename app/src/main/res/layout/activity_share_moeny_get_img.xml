<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">


    <include layout="@layout/toolbar_actionbar_no_shadow"/>

    <View style="@style/line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_height="0dp">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:cardCornerRadius="6dip"
            app:cardElevation="2dp">


            <com.zjzy.morebit.view.FixWidthRoundedImageView
                android:id="@+id/iv_poter_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@color/white"
                app:riv_border_color="@color/white"
                app:riv_corner_radius="6dip"
                app:riv_mutate_background="true"
                />
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_select_desc"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="14dp"
        android:text="选择图片"
        android:textColor="@color/color_333333"
        android:textSize="14sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_recyclerview_horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:scrollbars="none"/>


    <TextView
        android:id="@+id/tv_save_img"
        android:layout_width="match_parent"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_ffd800_round_30dp"
        android:gravity="center"
        android:text="@string/save_img"
        android:textColor="@color/color_FFFFFF"
        android:textSize="13dp"/>
</LinearLayout>