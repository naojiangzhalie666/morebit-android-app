<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ffffff_8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/img_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_default" />

        <TextView
            android:id="@+id/markTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_search_recommod_good_l"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            android:visibility="gone" />

    </RelativeLayout>


    <TextView
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/title"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="夏季防晒雨伞布布布布…"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        />

    <TextView
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10元券"
        android:background="@mipmap/yhj_bg_goods"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        />

    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ "
            android:textColor="#fff05557"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19.9"
            android:textStyle="bold"
            android:textColor="#fff05557"
            android:textSize="18sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  券后"
            android:textColor="@color/color_F05557"
            android:textSize="12sp"
            />
    </LinearLayout>



        <TextView
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/tv_coupul"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="赚 ¥ 2.34"
            android:background="@drawable/background_ffebce_radius_2dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#ff975400"
            android:layout_marginBottom="8dp"
            android:textSize="14sp"/>

</LinearLayout>