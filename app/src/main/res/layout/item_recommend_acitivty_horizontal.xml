<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="105dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_color_ff_top_20"
    android:paddingBottom="@dimen/dp_10"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/img_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_default" />

        <TextView
            android:id="@+id/markTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_search_recommod_good_l"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/bg_quan_2dp"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_11"
        tools:text="100元" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/discount_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_10" />



    </LinearLayout>

    <TextView
        android:id="@+id/tv_coupul"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:gravity="center"
        android:text="预估收益31.57元"
        android:textColor="#ffffffff"
        android:textSize="9sp"
        android:background="@mipmap/yugu_bg"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"

        />
</LinearLayout>