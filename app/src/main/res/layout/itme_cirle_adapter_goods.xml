<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_head"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@color/white"
        android:layout_marginRight="12dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <ImageView
            android:id="@+id/iv_head_qg_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_80000000"
            />

        <ImageView
            android:id="@+id/iv_head_qg"
            android:src="@drawable/cirle_goods_itme_head_qg"
            android:layout_width="53dp"
            android:layout_gravity="center"
            android:layout_height="53dp"
            />


        <TextView
            android:id="@+id/markTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:background="@drawable/bg_search_recommod_good_l"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="gone"
            />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@id/cv_head"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        tools:text="商品标题标题标题标题"
        />
    <!--券额-->
    <TextView
        android:layout_below="@id/tv_title"
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/cv_head"
        android:background="@drawable/faquan_juan"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:textColor="#DB493E"
        android:gravity="center"
        android:textSize="12sp"
        tools:text="券额5元"
        />
    <!--券后价-->
    <TextView
        android:id="@+id/tv_coupon_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cv_head"
        android:layout_alignBottom="@id/cv_head"
        android:textColor="#ffff645b"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="券后价5.00元"
        />
    <TextView
        android:id="@+id/tv_share"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/cv_head"
        android:background="@drawable/faquan_share"
        android:textColor="@color/white"
        android:gravity="center"
        tools:text="分享收益3元"/>

