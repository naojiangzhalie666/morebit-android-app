<?xml version="1.0" encoding="utf-8"?>
<com.zjzy.morebit.address.ui.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="100dp">

        <RelativeLayout
            android:id="@+id/main_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            >
            <RelativeLayout
                android:id="@+id/rl_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/txt_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_333333"
                    android:text="刘先生"/>

                <TextView
                    android:id="@+id/address_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="默认"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_FD4804"
                    android:layout_alignTop="@id/txt_user_name"
                    android:layout_toRightOf="@id/txt_user_name"
                    android:background="@drawable/bg_default_address"/>


                <TextView
                    android:id="@+id/txt_address_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignTop="@id/txt_user_name"
                    android:layout_marginLeft="60dp"
                    android:layout_toRightOf="@id/txt_user_name"
                    android:textSize="12sp"
                    android:text="18610905394"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/txt_goods_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/rl_user_name"
                android:textSize="12sp"
                android:maxLines="3"
                android:lines="3"
                android:maxWidth="250dp"
                android:maxLength="40"
                android:text=""/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/color_F8F8F8"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="100dp"/>
            <LinearLayout
                android:id="@+id/modify_address"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="编辑"
                    android:gravity="center"
                    android:textSize="@dimen/sp_12"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_999999"
                    />
            </LinearLayout>
        </RelativeLayout>



<!--</android.support.v7.widget.CardView>-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/delete"
            android:text="删除"
            android:textColor="@color/color_FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/btn_delete"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            />

    </LinearLayout>
</com.zjzy.morebit.address.ui.SwipeItemLayout>