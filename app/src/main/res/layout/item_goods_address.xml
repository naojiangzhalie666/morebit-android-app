    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_333333"
                android:textStyle="bold"
                android:text="刘先生"/>

            <TextView
                android:id="@+id/address_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@id/txt_user_name"
                android:layout_toRightOf="@id/txt_user_name"
                android:background="@drawable/bg_default_address"/>

            <TextView
                android:id="@+id/txt_goods_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/txt_user_name"
                android:textSize="12sp"
                android:maxLines="2"
                android:lines="2"
                android:maxLength="50"
                android:text="天津天津市河东区"/>
            <TextView
                android:id="@+id/txt_address_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/txt_user_name"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@id/txt_user_name"
                android:textSize="12sp"
                android:text="18610905394"
                />
            <TextView
                android:layout_width="1px"
                android:layout_height="30dp"
                android:background="@color/color_F8F8F8"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="100dp"/>
            <LinearLayout
                android:id="@+id/modify_address"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑"
                    android:gravity="center"
                    android:textSize="@dimen/sp_12"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_999999"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


<!--</android.support.v7.widget.CardView>-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/delete"
            android:text="删除"
            android:textColor="@color/color_FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/btn_delete"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            />

    </LinearLayout>
</com.zjzy.morebit.address.ui.SwipeItemLayout>