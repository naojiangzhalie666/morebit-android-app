<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        >

        <TextView
            android:id="@+id/title1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="定向高佣"
            android:textColor="#fff05557"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            />

        <TextView
            android:id="@+id/tv_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即抢购"
            android:layout_gravity="center"
            android:textColor="#fff05557"
            android:paddingLeft="4dp"
            android:background="@drawable/bg_border_f0057_10"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingRight="4dp"
            android:drawableRight="@mipmap/mbgo_right"
            android:drawablePadding="4dp"
            android:textSize="10sp"
            />

    </LinearLayout>

    <ImageView
        android:layout_marginTop="12dp"
        android:id="@+id/img_zhu"
        android:layout_width="158dp"
        android:layout_height="158dp"
        android:layout_gravity="center"
       android:background="@color/color_999999"
        />
    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="夏季防晒雨伞布布布布…"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ "
            android:textColor="#fff05557"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19.9"
            android:textStyle="bold"
            android:textColor="#fff05557"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  券后"
            android:textColor="@color/color_F05557"
            android:textSize="12sp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10元券"
            android:gravity="center"
            android:background="@mipmap/yhj_bg_goods"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            />

        <TextView
            android:id="@+id/tv_coupon"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赚 ¥ 2.34"
            android:background="@drawable/background_ffebce_radius_2dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textColor="#ff975400"
            android:textSize="14sp"
            />
    </RelativeLayout>



</LinearLayout>