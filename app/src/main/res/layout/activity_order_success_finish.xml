<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical">
    <include
        layout="@layout/top"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/success_icon"
            android:scaleType="centerInside"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/sp_15"
            android:text="订单支付成功"
            android:textStyle="bold"
            android:textColor="@color/color_333333"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="努力配货中，请保持手机畅通"
            android:textColor="@color/colcor_999999"
            android:textSize="@dimen/sp_12"
            />
        <!--查看订单、继续购物-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_order_detail"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="查看订单"
                android:layout_weight="1"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_999999"
                android:background="@drawable/btn_look_order"
                android:layout_marginLeft="40dp"

                />
            <TextView
                android:id="@+id/btn_goods_list"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="继续购物"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_FFFFFF"
                android:background="@drawable/btn_buy_goods"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>