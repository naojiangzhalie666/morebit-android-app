<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/line"
        android:layout_width="0.5dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_cccccc" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@+id/line"
        android:background="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/msg_sys" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxWidth="180dp"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    tools:text="系统消息" />
                <!--   <android.support.v7.widget.CardView
                       android:id="@+id/dot"
                       android:layout_width="6dp"
                       android:layout_height="6dp"
                       android:layout_marginBottom="5dp"
                       app:cardCornerRadius="3dp">

                       <View
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:background="@color/color_FF2B33"

                           />
                   </android.support.v7.widget.CardView>-->

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_999999"
                    android:textSize="10sp"
                    tools:text="2018.11.12" />
            </LinearLayout>

            <TextView
                style="@style/line"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:letterSpacing="0.08"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/color_666666"
                android:textSize="12sp"
                tools:text="您因盗用他人账号，已被平台封号，改建后悔认识红丝绒见覅 " />

            <com.markermall.cat.view.AspectRatioView
                android:id="@+id/as_banner_make_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:aspectRatio="8.46">

                <ImageView
                    android:id="@+id/iv_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />
            </com.markermall.cat.view.AspectRatioView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>