<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_editoneline_dialog_whilebg_8dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:layout_marginTop="12dp"
        android:text="更新啦"
        android:textSize="18sp"
        android:textColor="@color/color_000000"/>

    <TextView
        android:id="@+id/edtext"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:maxHeight="60dp"
        android:background="@color/white"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:textSize="16sp"
        android:padding="5dp"
        android:gravity="top|left"
        android:text="新版本\n更新了xxxbug"
        android:textColor="@color/color_747476"
        android:textColorHint="@color/color_747476"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_F6F4F5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_editoneline_dialog_btnbg_8dp_left"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="取消"
            android:textSize="14sp"
            android:textColor="@color/color_808080"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/huise_jiben"/>
        <TextView
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_editoneline_dialog_btnbg_8dp_right"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="确定"
            android:textSize="14sp"
            android:textColor="@color/color_808080"/>

    </LinearLayout>

</LinearLayout>