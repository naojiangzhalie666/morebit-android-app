<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rl_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">
    <!--  当之有一个EditText或者AutoCompleteTextView的时候，进入画面时是默认得到焦点的。 要想去除焦点，可以在auto之前加一个0像素的layout，并设置他先得到焦点。 -->
    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true"/>



    <com.jf.my.view.AspectRatioView
        android:id="@+id/ar_title_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:aspectRatio="1.32">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_denglubeijing"/>
    </com.jf.my.view.AspectRatioView>
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:padding="20dp"
        android:src="@drawable/icon_login_back"/>
    <LinearLayout
        android:id="@+id/rl_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_back"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_login_logo"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="41dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/areaCodeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_15"/>

            <com.jf.my.view.ClearEditText
                android:id="@+id/edtPhone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:layout_marginLeft="9dp"
                android:background="@null"
                android:hint="请输入手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:paddingRight="10dp"
                android:textColor="@color/color_3A3A3A"
                android:textColorHint="@color/color_C0C0C0"
                android:textCursorDrawable="@drawable/cursordrawable_009688_inputbox"
                android:textSize="14sp"
                app:deleteImg="@drawable/clean_icon"/>

               <Button
                   android:id="@+id/areaCodeBtn"
                    style="@style/areaCodeStyle"
                   />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1px"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:background="@color/color_E6E6E6"/>


        <TextView
            android:id="@+id/next_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:layout_marginTop="30dp"
            android:layout_weight="6"
            android:background="@drawable/selector_next_button"
            android:enabled="false"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/color_333333"
            android:textSize="16sp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="90dp"
                android:layout_height="0.1px"
                android:layout_marginLeft="49dp"
                android:layout_marginRight="15dp"
                android:background="@color/color_E6E6E6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="其他登录方式"
                android:textColor="@color/color_999999"
                android:textSize="12sp"
                />

            <View
                android:layout_width="90dp"
                android:layout_height="0.1px"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="49dp"
                android:background="@color/color_E6E6E6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/weixin_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|right"
                android:orientation="vertical"
                android:paddingRight="30dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_login_wx"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="微信登录"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_12"
                    />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/forget_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="vertical"
                android:paddingLeft="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_login_phone"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="手机注册"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_12"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册或登录即代表您已同意"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_12"
                />

            <TextView
                android:id="@+id/ll_userAgreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《蜜源协议》"
                android:textColor="@color/color_E18400"
                android:textSize="@dimen/sp_12"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="和"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_12"
                />

            <TextView
                android:id="@+id/privateProtocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《隐私政策》"
                android:textColor="@color/color_E18400"
                android:textSize="@dimen/sp_12"
                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

