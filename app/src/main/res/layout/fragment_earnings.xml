<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F8F9FB">
    <!--    <LinearLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="200dp"-->
    <!--        android:background="@drawable/bg_earning_header"/>-->
    <com.zjzy.morebit.Module.common.widget.SwipeRefreshLayout
        android:id="@+id/swipeList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:is_auto_refresh="false">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--<RelativeLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">-->

                <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="226dp"-->
                <!--android:background="@drawable/icon_beijing_earnings"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_alignParentStart="true" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/earnings_bg"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <View
                        android:id="@+id/status_bar"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/transparent" />

                    <include layout="@layout/title_earnings" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="#FF8078"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="15dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_income_notice" />

                        <TextView
                            android:id="@+id/withDrawTimeTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text=""
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <!--<FrameLayout-->
                        <!--android:id="@+id/fl_change"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent" />-->

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="15dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:text="@string/balance"
                                    android:textColor="@color/color_FFFFFF"
                                    android:textSize="@dimen/sp_16" />

                                <LinearLayout
                                    android:layout_marginBottom="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:text="¥ "
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/color_FFFFFF"
                                        android:textSize="@dimen/sp_16" />

                                    <TextView
                                        android:id="@+id/balance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/color_FFFFFF"
                                        android:textSize="@dimen/sp_38" />
                                </LinearLayout>

                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/bill_details"
                                    android:layout_width="71dp"
                                    android:layout_height="23dp"
                                    android:layout_marginTop="3dp"
                                    android:background="@drawable/bg_border_white"
                                    android:gravity="center"
                                    android:text="@string/bill_details"
                                    android:textColor="@color/color_FFFFFF"
                                    android:textSize="@dimen/sp_12" />


                            </LinearLayout>

                            <TextView
                                android:id="@+id/withdraw"
                                android:layout_width="82dp"
                                android:layout_height="27dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/bg_ffffff_corners_30dp"
                                android:gravity="center"
                                android:text="去提现"
                                android:paddingRight="10dp"
                                android:drawableRight="@drawable/earnings_next"
                                android:textColor="#FF5B5B"
                                android:textSize="@dimen/sp_14" />
                        </RelativeLayout>

                    </RelativeLayout>
                </LinearLayout>
                <!--预估收入-->

                <include layout="@layout/eaings_item_estimate"
                    />
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <FrameLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                        <com.flyco.tablayout.SlidingTabLayout
                            android:id="@+id/orderTabLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            app:tl_indicator_color="@color/color_fffc672a"
                            app:tl_indicator_corner_radius="2dp"
                            app:tl_indicator_height="4dp"
                            app:tl_indicator_margin_bottom="5dp"
                            app:tl_indicator_width="20dp"
                            app:tl_tab_padding="30dp"
                            app:tl_textSelectColor="@color/color_333333"
                            app:tl_textUnselectColor="@color/color_666666"
                            app:tl_textsize="@dimen/sp_16" />
                    </FrameLayout>


                    <com.zjzy.morebit.view.ChildViewPager
                        android:visibility="gone"
                        android:id="@+id/orderViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_rule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="29dp"
                    android:gravity="right"
                    android:text="@string/rule"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>
        </ScrollView>

    </com.zjzy.morebit.Module.common.widget.SwipeRefreshLayout>
</RelativeLayout>