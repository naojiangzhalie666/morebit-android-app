<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingTop="@dimen/dp_6">


    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/pruchase_m"
        android:gravity="center_horizontal"
        android:text="免单福利"
        android:textColor="#ffffffff"
        android:textSize="12sp" />

    <TextView
        android:paddingLeft="@dimen/dp_10"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/iv_head"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxEms="10"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        android:text="商品标题标题标题标题" />
    <!--券额-->
    <TextView
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/iv_head"
        android:background="@drawable/background_radius_4dp"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:text="100元劵" />
    <TextView
        android:id="@+id/tv_subsidy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/tv_price"
        android:background="@drawable/background_radius_yellow_4dp"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:layout_marginLeft="12dp"
        android:text=" 补贴189元" />
    <TextView
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/iv_head"
        android:layout_below="@id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新人专享0元购"
        android:textColor="#ffdb493e"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        />





</RelativeLayout>