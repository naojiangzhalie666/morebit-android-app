<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5"
    android:gravity="center_horizontal"
    android:paddingRight="30dp"
    android:paddingLeft="30dp">


           <ImageView
               android:layout_width="172dp"
               android:layout_height="172dp"
               android:scaleType="fitXY"
               android:layout_marginTop="20dp"
               android:id="@+id/iv_qrcode"
               />

    <TextView
               android:id="@+id/save_qrcode"
               android:layout_width="match_parent"
               android:layout_height="44dp"
               android:text="保存二维码到手机"
               android:textSize="15sp"
               android:textColor="@color/color_2B0900"
               android:gravity="center"
               android:layout_marginTop="25dp"
               android:background="@drawable/bg_8bc619_round_30dp"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_vertical"
           android:layout_marginTop="25dp"
           android:id="@+id/ll_wx_code"
           >
           <TextView
               android:id="@+id/service_wechat"
               android:layout_width="match_parent"
               android:layout_height="44dp"
               android:textSize="15sp"
               android:textColor="@color/color_2B0900"
               android:gravity="center"
               android:background="@drawable/bg_8bc619_round_30dp_left"
               android:layout_toLeftOf="@+id/copy_wxnum"/>
           <TextView
               android:id="@+id/copy_wxnum"
               android:layout_width="wrap_content"
               android:layout_height="44dp"
               android:textSize="15sp"
               android:paddingLeft="15dp"
               android:paddingRight="15dp"
               android:text="@string/copy"
               android:textColor="@color/color_2B0900"
               android:layout_alignParentRight="true"
               android:gravity="center"
               android:background="@drawable/bg_fcdfoa_round_30dp_right"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_alignParentEnd="true"
               android:layout_alignParentRight="true"
               android:layout_marginBottom="286dp"
               android:layout_marginEnd="29dp"
               android:layout_marginRight="29dp"
               android:text="服务时间：周一至周六9:00-18:00"
               android:textColor="@color/color_333333"
               android:textSize="15sp"
               android:visibility="gone"/>
       </RelativeLayout>


</LinearLayout>
