<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:paddingTop="12dp"
    android:orientation="vertical">

    <include layout="@layout/item_msg_time"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp">

        <View
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="260dp"
            android:background="@color/color_999999" />

        <LinearLayout
            android:id="@+id/rl"
            android:background="@drawable/bg_ffffff_8dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本地生活会场加码来袭…"
                android:textColor="#ff333333"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/img_bg"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="130dp"
                />
            <TextView
                android:id="@+id/tv_content"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="#910点！]爆款商品1元秒杀！数量有限，抢到就是赚 到！猛戳>>>"
                android:textColor="#ff333333"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="12dp"
                />

        </LinearLayout>


        <ImageView
            android:id="@+id/is_img"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/msg_activity_end"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="12dp"
            android:paddingRight="12dp"
            />

        <LinearLayout
            android:id="@+id/rl2"
            android:visibility="gone"
            android:background="@drawable/bg_8000000_8dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_height="260dp">

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
