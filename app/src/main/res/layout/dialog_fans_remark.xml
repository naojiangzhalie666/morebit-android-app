<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ffffff_12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_ffffff_12dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="修改粉丝备注"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/edt_remark"
                android:layout_width="202dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/bg_fans_item_input_remark"
                android:gravity="center"
                android:hint="最多输入12位汉字"
                android:maxLength="12"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textCursorDrawable="@drawable/cursordrawable_009688_inputbox"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="102dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:text="取消"
                    android:background="@drawable/bg_item_fans_cancel"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="102dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="保存"
                    android:background="@drawable/bg_item_fans_confirm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </LinearLayout>
            <ImageView
                android:id="@+id/diss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wx_tian_icon"
                android:layout_alignParentRight="true"
                android:paddingTop="12dp"
                android:paddingRight="12dp"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>