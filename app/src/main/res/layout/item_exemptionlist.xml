<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iten_rl"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/goodImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="130dp"
            android:src="@drawable/icon_default"
            android:scaleType="centerCrop"/>
         <RelativeLayout
             android:id="@+id/goodImgTag_rl"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             >
         <ImageView
             android:id="@+id/goodImgTag_iv"
             android:layout_width="90dp"
             android:layout_height="90dp"
             android:layout_centerInParent="true"
             android:src="@drawable/bg_oval_40_000000_round"/>
         <TextView
                android:id="@+id/goodImgTag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="正在抢购"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="16sp" />
         </RelativeLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:gravity="left"
                android:lineSpacingExtra="4dp"
                android:lines="1"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/color_2B0900"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/atTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:text=""
                android:textColor="@color/color_999999"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/overPortion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_1yellowline_whitebg_round_30dp"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text=""
                    android:textColor="@color/color_FCDF0A"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/getWelfare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_000000_1dpline_yellowbg_round_15dp"
                    android:gravity="center"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="我要福利"
                    android:textColor="@color/color_2B0900"
                    android:textSize="13sp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_EDEDED"/>






</LinearLayout>
