<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_informationd_item"
    android:orientation="vertical">
<View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginBottom="20dp"
    android:background="#F2F0F3"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="@dimen/sp_14"
            android:maxLines="1"
            android:maxLength="19"
            android:textColor="@color/color_333333"
            tools:text="你还不知道马克猫？那你的损失可就大了！"
            android:id="@+id/tv_title"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_title"
            android:layout_marginLeft="2dp"
            android:id="@+id/iv_new"
            android:visibility="gone"
            android:src="@drawable/icon_xinpin"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_mi_yuan_information_recycle_arrows" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/color_999999"
            android:layout_centerVertical="true"
            tools:text="2019-01-15"
            android:id="@+id/tv_time"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/color_999999"
                tools:text="9999人阅读"
                android:layout_marginRight="10dp"
                android:id="@+id/tv_read"/>
            <TextView
                android:id="@+id/tv_share_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:includeFontPadding="false"
                android:textColor="@color/colcor_999999"
                android:drawableRight="@drawable/icon_college_share"
                android:drawablePadding="4dp"
                android:textSize="11sp"
                tools:text="6547" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>