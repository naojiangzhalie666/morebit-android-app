<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_ly"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <com.jf.my.view.AspectRatioView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:aspectRatio="0.56"
        android:layout_above="@+id/rb_tick_rl"
        app:reverse="true">

        <ImageView
            android:id="@+id/id_index_gallery_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
    </com.jf.my.view.AspectRatioView>

    <RelativeLayout
        android:id="@+id/rb_tick_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:id="@+id/rb_tick"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/radio_share_money"
            android:button="@null"
            android:clickable="false"
            android:drawableRight="@null"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </RelativeLayout>
    <!--<TextView-->
    <!--android:id="@+id/right_boxnull"-->
    <!--android:layout_width="10dp"-->
    <!--android:layout_toRightOf="@+id/id_index_gallery_item_image"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_alignParentBottom="true"/>-->


</RelativeLayout>