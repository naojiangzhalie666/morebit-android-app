<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
    </style>


    <style name="TopSize">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="TopSizeTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/color_000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TopSizeBack">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/btn_title_return_icon</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">6dp</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppStart" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_window_start</item>
        <!--<item name="android:windowIsTranslucent">false</item>-->
        <!--<item name="android:windowFullscreen">false</item>-->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:windowDisablePreview">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="fullDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->

    </style>


    <style name="ardialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
        <item name="android:windowFullscreen">true</item><!--无标题-->
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>

    <!--tablayout去除左右两边空格让item填满 -->
    <style name="MyTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabTextAppearance">@style/conditionTabLayoutTextAppearance</item>
    </style>

    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/push_buttom_out</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="line">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/color_EDEDED</item>
        　
    </style>

    <style name="line_vertical">

        <item name="android:layout_width">0.1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_EDEDED</item>
        　
    </style>


    <style name="commom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否悬浮在activity上 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 灰度 -->
        <item name="android:backgroundDimAmount">0.6</item>

    </style>

    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:elevation">4dp</item>
        <item name="elevation">4dp</item>
    </style>


    <style name="UpdateAppNumberProgressBar_Red">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="progress_max">100</item>
        <item name="progress_current">0</item>

        <item name="progress_unreached_color">#CCCCCC</item>
        <item name="progress_reached_color">#e94339</item>

        <item name="progress_text_size">12sp</item>
        <item name="progress_text_color">#e94339</item>

        <item name="progress_reached_bar_height">4dp</item>
        <item name="progress_unreached_bar_height">3dp</item>
    </style>

    <!--app更新-->
    <style name="UpdateAppDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowEnterAnimation">@anim/update_app_window_in</item>
        <item name="android:windowExitAnimation">@anim/update_app_window_out</item>
    </style>
    <!-- progressBar宽条样式 -->
    <style name="tallerBarStyle" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
    </style>

    <style name="Widget.Markermall.CheckBox" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_checkbox</item>
    </style>

    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">50dp</item>
        <!--<item name="android:padding">25dp</item>-->
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="my_fans_tablayout">
        <item name="android:textAppearance">@dimen/sp_14</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabIndicatorColor">@color/color_FFE200</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/color_666666</item>
        <item name="android:textColor">@color/color_666666</item>
    </style>

    <style name="my_fans_tablayout_text" parent="TextAppearance.Design.Tab">
        <item name="android:text">@dimen/sp_14</item>
    </style>
    <style name="dialog_change_clarity" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/color_1E1E1E</item>
    </style>

    <style name="searchTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="conditionTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="areaCodeStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:text">@string/areacode</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:background">@drawable/bg_areacode</item>
    </style>


    <style name="floorLabel">
        <item name="android:textSize">11sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/color_F11919</item>
        <item name="android:background">@drawable/bg_floor_two_label</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="floorLabelFour" >
        <item name="android:textSize">11sp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/color_F11919</item>
        <item name="android:background">@drawable/bg_floor_two_label</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
    </style>

    <!--商品列表的补贴样式-->
    <style name="subsidiesPriceItem">
        <item name="android:background">@drawable/bg_item_bonus</item>
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="android:textColor">@color/color_FF3662</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Theme.AppCompat.Full" parent="Theme.AppCompat.Translucent">
        <item name="android:windowFullscreen">true</item>
    </style>
    <!-- window 透明的-->
    <style name="Theme.AppCompat.Translucent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="line_f1f1f1">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/color_F1F1F1</item>
        　
    </style>

    <style name="take_photo_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>
</resources>
